<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.radmushroom.cloudmade_testtask_bugay_sergey.UserDetailActivity"
    tools:layout_editor_absoluteY="81dp">

    <ImageView
        android:id="@+id/userAvatar"
        android:layout_width="75dp"
        android:layout_height="0dp"
        android:layout_marginBottom="9dp"
        android:layout_marginTop="16dp"
        android:src="@mipmap/ic_launcher"
        app:layout_constraintBottom_toTopOf="@+id/loginDetail"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/loginDetail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="9dp"
        android:text="userLogin"
        android:textColor="#060606"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/locationDetail"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/nameDetail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="18dp"
        android:layout_marginStart="16dp"
        android:text="Username"
        android:textColor="#333232"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/blogDetail"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/locationDetail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="18dp"
        android:layout_marginEnd="14dp"
        android:text="No location found"
        android:textColor="#333232"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/emailDetail"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/blogDetail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="6dp"
        android:layout_marginTop="181dp"
        android:text="No blog found for this user"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/emailDetail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="2dp"
        android:text="No email found for this user"
        android:textSize="14sp"
        app:layout_constraintBottom_toTopOf="@+id/companyText"
        app:layout_constraintEnd_toEndOf="@+id/companyText" />

    <TextView
        android:id="@+id/bioDetail"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:layout_marginBottom="19dp"
        android:layout_marginEnd="3dp"
        android:layout_marginTop="19dp"
        android:text="No bio found for this user"
        android:textSize="14sp"
        app:layout_constraintBottom_toTopOf="@+id/reposListRecyclerView"
        app:layout_constraintEnd_toEndOf="@+id/blogDetail"
        app:layout_constraintTop_toTopOf="@+id/blogDetail" />

    <TextView
        android:id="@+id/companyText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="No company found for this user"
        app:layout_constraintStart_toEndOf="@+id/blogDetail"
        app:layout_constraintTop_toBottomOf="@+id/blogDetail" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/reposListRecyclerView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="64dp"
        app:layoutManager="LinearLayoutManager"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/nameDetail" />
</android.support.constraint.ConstraintLayout>